{
  "variables": {
    "aws_profile": "{{env `AWS_PROFILE`}}",
    "my_ip_address": "",
    "gold_ami": "{{user `seed_ami`}}"
  },
  "builders": [
    {
      "ssh_pty": true,
      "type": "amazon-ebs",
      "profile": "{{ user `aws_profile`}}",
      "region": "us-east-1",
      "instance_type": "{{user `ec2_instance_type`}}",
      "subnet_id": "{{user `subnet_public_1_id`}}",
      "vpc_id": "{{user `vpc_id`}}",
      "ami_name": "ab2d-jenkins-master-{{isotime \"2006-01-02\"}}",
      "source_ami": "{{user `gold_ami`}}",
      "ami_virtualization_type": "hvm",
      "associate_public_ip_address": "true",
      "temporary_security_group_source_cidrs": ["{{user `my_ip_address`}}/32"],
      "ssh_username": "{{user `ssh_username`}}",
      "ebs_optimized": true,
      "ami_description": "AB2D-JENKINS-MASTER",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 250,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "tags": {
        "application_name": "AB2D",
        "creator": "packer",
        "gold_ami": "{{user `gold_ami`}}",
        "cpm backup": "HR Daily Weekly Monthly Annually"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell","inline": [
        "sudo mkdir -p /deployment",
	"sudo chmod -R 777 /deployment"
      ]
    },
    {
      "type": "file",
      "source": "./docker-daemon.json",
      "destination": "/tmp/docker-daemon.json"
    },
    {
      "type": "file",
      "source": "./provision-jenkins-master.sh",
      "destination": "/tmp/provision-jenkins-master.sh"
    },
    {
      "type": "file",
      "source": "./logrotate-var-log-messages-config-snippet",
      "destination": "/deployment/logrotate-var-log-messages-config-snippet"
    },
    {
      "type": "shell",
      "inline": [
        "sudo chmod 755 /tmp/provision-jenkins-master.sh",
        "/tmp/provision-jenkins-master.sh --ssh-username={{user `ssh_username`}}"
      ]
    }
  ]
}
