{
  "Version": "2012-10-17",
  "Id": "sqspolicy",
  "Statement": [
    {
      "Sid": "First",
      "Effect": "Allow",
      "Action": "sqs:*",
      "Resource": "arn:aws:sqs:${region}:${account}:${environment}-events-sqs"
    },
    {
      "Sid": "SNSSubcription",
      "Effect": "Allow",
      "Action": "sqs:SendMessage",
      "Resource": "arn:aws:sqs:${region}:${account}:${environment}-events-sqs",
      "Condition": {
        "ArnEquals": {
          "aws:SourceArn": "arn:aws:sns:${region}:${account}:${environment}-events-sns-topic"
        }
      }
    }
  ]
}
